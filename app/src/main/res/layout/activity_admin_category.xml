<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".AdminCategoryActivity">

    <TextView
        android:id="@+id/slogan_category"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Add New Product"
        android:textAlignment="center"
        android:textSize="26sp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:id="@+id/linear_category_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan_category"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/t_shirt_product"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/tshirt" />

        <ImageView
            android:id="@+id/trouser_product"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/trouser" />

        <ImageView
            android:id="@+id/frock_product"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/frock" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_category_layout2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/shoes_product"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/shoes" />


        <ImageView
            android:id="@+id/picture_product"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/pic2" />

        <ImageView
            android:id="@+id/mug_product"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/mug" />



    </LinearLayout>
    <LinearLayout
        android:id="@+id/linear_category_layout3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_category_layout2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="75dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/pot_product"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/pot" />


        <ImageView
            android:id="@+id/hat_product"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/hat" />

        <ImageView
            android:id="@+id/bag_product"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:src="@drawable/bag" />

    </LinearLayout>
</RelativeLayout>